<main>
      <div class='container mt-3 text-center'>
            <div>
                  <h1>Ingrese su usuario</h1>
                  <br />
                  <form
                        action='/login'
                        method='post'
                        class='row g-3 flex-column was-validated justify-content-center align-items-center mt-5'
                  >
                        <div class='col-md-4'>
                              <input
                                    id='nombre'
                                    class='form-control'
                                    type='text'
                                    name='username'
                                    placeholder='Ingrese el Usuario'
                                    required
                              />
                        </div>
                        <div class='row justify-content-md-center mt-4'>
                              <div class='col-1'>
                                    <button
                                          class='btn btn-outline-dark'
                                    >Enviar</button>
                              </div>
                        </div>
                  </form>
            </div>
      </div>
</main>