<main class="container mt-5 pt-5 pb-5">
      <div class="text-center mb-5">
        <h1>Ingrese un producto</h1>
      </div>

      <form 
        class="row g-3 flex-column was-validated justify-content-center align-items-center mt-5" id="formProduct"novalidate>
        <div class="form-floating col-md-4">
          <input type="text" class="form-control" id="nombreProduct" placeholder="Nombre" name="title" required>
          <label for="nombreProduct">Nombre</label>
        </div>
        <div class="form-floating col-md-4">

          <input type="number" class="form-control" id="priceProduct" placeholder="Precio" name="price" required>
          <label for="priceProduct">Precio</label>
        </div>
        <div class="form-floating col-md-4">
          <select class="form-control" name="imgProduct" id="imgProduct">
            
            <option value="https://cdn3.iconfinder.com/data/icons/technology-13/48/tech-color_keyboard-512.png">Teclado</option>
              <option value="https://cdn3.iconfinder.com/data/icons/technology-13/48/tech-color_computer-512.png">Pc</option>
              <option value="https://cdn2.iconfinder.com/data/icons/flat-set-2/64/flat_set_2-09-512.png">Monitor</option>
              <option value="https://cdn3.iconfinder.com/data/icons/tango-icon-library/48/input-mouse-512.png">Mouse</option>
          </select>
    
        </div>
        <div class="row justify-content-md-center mt-4">
          <div class="col-1  ">
            <button class="btn btn-outline-dark" type="submit">Enviar</button>
          </div>
        </div>
      </form>
      </div>
<hr>
       <div class="text-center mb-5">
        <h2>Lista de productos</h2>
      </div>
      <table class="table table-dark table-striped">
        <thead>
          <tr>
            <th scope="col">nombre</th>
            <th scope="col">precio</th>
            <th scope="col">imagen</th>
          </tr>
        </thead>
        <tbody id="tableProducts">
          {{#if isEmpty }}
            <tr>
              <td>No hay Productos registrados a√∫n</td>
            </tr>
            {{/if  }}

        </tbody>
      </table>
<div class="row g-3 flex-column was-validated justify-content-center align-items-center mt-5">
<h2 class="col-md-4">Centro de mensajes</h2>
<input type="email"  id="emailUser" placeholder="Ingrese su email" class="form-floating col-md-4">
<div class="contenedorMensajes">
<ul id="listaMensajes"></ul>
</div>
<div id="estaEscribiendo" class="col-md-4"> .</div>
<form id="formMensaje" class="form-floating col-md-4">
  <input type="text" id="mensaje" placeholder="escriba su mensaje">
  <button class="btn btn-outline-dark" type="submit">Enviar</button>
</form>
</div>
    </main>
